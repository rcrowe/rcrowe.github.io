<?xml version="1.0" encoding="UTF-8"?>

<project name="vivalacrowe" default="publish">
    
    <target name="jekyll">
        <delete dir="./_site" includeemptydirs="true" />
        <exec command="jekyll" />
    </target>

    <target name="publish">
        <exec command="git add ." />
        <exec command="git commit -m Latest" />
        <exec command="git push origin master" />
    </target>
    
</project>